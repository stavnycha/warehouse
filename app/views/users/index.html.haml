%h1 Listing users

%table.table.table-striped
  %thead
    %tr
      %th Id
      %th Email
      %th
      %th

  %tbody
    - @users.each do |user|
      %tr
        %th= link_to user.id, user
        %th= user.email
        %td= link_to 'Edit', edit_user_path(user), :class => 'btn btn-default btn-xs'
        %td= link_to 'Destroy', user, :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => 'btn btn-xs btn-danger'

%br

= link_to 'New User', new_user_path, :class => 'btn btn-primary'
