= hidden_field_tag :direction, params[:direction]
= hidden_field_tag :sort,      params[:sort]

= paginate @categories

%table.table.table-striped
  %thead
    %tr
      %th= sortable 'id'
      %th= sortable 'name'
      %th
  %tbody
    - @categories.each do |category|
      %tr
        %td= link_to category.id, category_path(category)
        %td= category.name
        %td
          = link_to 'Edit', edit_category_path(category), :class => 'btn btn-default btn-xs'
          = link_to 'Destroy', category_path(category), :method => :delete, :data => { confirm: 'Are you sure?' }, :class => 'btn btn-xs btn-danger'

= paginate @categories, :remote => true
