= will_paginate @categories

.page-header
  %h1 Categories

= form_tag categories_path, :method => 'get', :id => "categories_search", :remote => true do
  %p
    = text_field_tag :search, params[:search]
    = submit_tag "Search", :name => nil
  %div#categories
    = render 'categories'

%p= link_to 'New', new_category_path, :class => 'btn btn-primary'
