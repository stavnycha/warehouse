.page-header
  %h1 Products

= form_tag products_path, :method => 'get', :id => "products_search", :remote => true do
  %p
    = text_field_tag :search, params[:search]
    = submit_tag "Search", :name => nil
  %div#products
    = render 'products'

%p= link_to 'New', new_product_path, :class => 'btn btn-primary'